<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:paddingTop="60dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_folder_bg"
        android:paddingHorizontal="52dp"
        android:paddingVertical="48dp"
        android:src="@drawable/ic_folder"
        app:tint="@color/white" />

    <TextView
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="File Browser" />

    <TextView
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:fontFamily="@font/roboto_light"
        android:text="Import videos from your file browser" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/browseMediaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/browse_btn_bg"
        android:paddingHorizontal="49dp"
        android:paddingVertical="8dp"
        android:text="Browse videos"
        android:textAllCaps="true"
        app:backgroundTint="@null"
        app:cornerRadius="20dp" />

</LinearLayout>